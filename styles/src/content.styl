&
	font-metrics 15px 23px

img, canvas
	max-width 100% !important
	height auto !important

.centered
	text-align center

ul.brands
	reset-box-model()
	list-style none
	text-align center

	>li
		&:first-child
			text-align left
		&:last-child
			text-align right
* + ul.brands
	padding-top (68px - 17px)
ul.brands + *
	padding-top 30px

hr
	reset-box-model()
	display block
	height 1px
	overflow hidden
	background #a2a2a2
* + hr
	margin-top 40px
hr + *
	margin-top (63px - 19px)

.advantages
	>.row>dl
		$pl = (100px - ($grid-gutter-width/2))

		padding-left $pl
		padding-right 25px

		>dt
			custom-font('Roboto Bold Condensed', 20px, 24px)
			text-transform uppercase
			position relative

			&:before
				pseudo-block()
				absolute left (-($pl)) top 0
				size ($pl - 19px) 100%
				min-height 100px
				background-position right top
				background-repeat no-repeat

		&.lift-truck>dt:before
			bg-img('schematic-icons/lift-truck.png')
		&.miner>dt:before
			bg-img('schematic-icons/miner.png')
		&.scissors>dt:before
			bg-img('schematic-icons/scissors.png')
		&.thumb-up>dt:before
			bg-img('schematic-icons/thumb-up.png')

		>dd
			line-height 18px

		>dt+dd
			margin-top (23px - 19px)
