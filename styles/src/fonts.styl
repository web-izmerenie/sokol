declare-font(
	$name, $weight=normal, $style=normal,
	$file-base-name=$name, $svg-font-id=$name
)
	@font-face
		font-family $name

		$path = pathjoin($fonts-path, $file-base-name)

		src url($path + '.woff' + $rev-qs) format('woff'),
			url($path + '.otf' + $rev-qs) format('opentype'),
			url($path + '.svg' + $rev-qs + '#' + $svg-font-id) format('svg')

		font-weight $weight
		font-style $style

declare-font('Roboto Thin', 250, normal, 'roboto-thin', 'Roboto-Thin')

custom-font($name, $weight=normal, $font-size=inherit, $line-height=inherit)
	font-family $name, serif
	font-metrics $font-size, $line-height

	if $name is 'Roboto Thin'
		font-weight 250
