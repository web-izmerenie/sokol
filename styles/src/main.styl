@import 'variables'

@require 'bootstrap'
@require 'nib'

@import 'mixins'
@import 'fonts'

html, body
	height 100%

header
	@import 'header'

maxw($mw=$max-width)
	margin 0 auto
	max-width $mw

.top-part
	maxw()
	position relative
	min-height 100%
	padding-bottom ($footer-height + 80px)

.body-grid.container
	z-index 10
	position relative

	&:after
		pseudo-block()
		clear both

	.col
		&:nth-child(1)
			width (219px + $grid-gutter-width)
			margin-left 4px
		&:nth-child(2)
			float right
			width (640px + $grid-gutter-width)

	.catalog-menu
		@import 'catalog-menu'

	main
		@import 'content'

footer
	@import 'footer'

